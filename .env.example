# Configurazione Database - Template
# Copia questo file in .env e inserisci le tue credenziali

DB_HOST=localhost
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=your_db_name
DB_CHARSET=utf8mb4
DB_PORT=3306

# Admin IDs (separati da virgola)
ADMIN_IDS=16,9,12,11

# Timeout sessione (in secondi)
# 1800 = 30 minuti (raccomandato)
# 86400 = 24 ore (attuale, da ridurre)
SESSION_TIMEOUT=1800

# CORS - Domini autorizzati (separati da virgola)
# Usa * solo per sviluppo locale, MAI in produzione
CORS_ALLOWED_ORIGINS=https://yourdomain.com
